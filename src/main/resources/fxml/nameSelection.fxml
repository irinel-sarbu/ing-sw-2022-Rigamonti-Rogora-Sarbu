<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="389.0"
            prefWidth="650.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/"
            fx:controller="view.gui.controllers.NameSelectionSceneController">
    <children>
        <ImageView fx:id="bgImage" fitHeight="389.0" fitWidth="650.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Graphical_Assets/eriantys.jpg"/>
            </image>
        </ImageView>
        <TextField fx:id="name" layoutX="244.0" layoutY="333.0" maxWidth="-Infinity" prefHeight="0.0" prefWidth="218.0">
            <effect>
                <Blend/>
            </effect>
        </TextField>
        <Button fx:id="confirmNameButton" layoutX="490.0" layoutY="333.0" onMousePressed="#onNameConfirmed"
                prefHeight="25.0" prefWidth="67.0" text="Confirm"/>
        <Label fx:id="titleLabel" prefHeight="81.0" prefWidth="650.0" text="Welcome to Eriantys"/>
        <Label fx:id="menuLabel" alignment="TOP_RIGHT" layoutX="20.0" layoutY="332.0" prefHeight="25.0"
               prefWidth="224.0" text="Insert your name here:">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets right="40.0"/>
            </padding>
        </Label>
    </children>
    <stylesheets>
        <URL value="@../css/nameSelection.css"/>
        <URL value="@../css/sharedStyles.css"/>
    </stylesheets>
</AnchorPane>
